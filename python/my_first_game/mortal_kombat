import random

print ("\t\tДобро пожаловать в игру Mortal Kombat itStep\n\n\n")
helth1=1000 #мои жизни
helth2=1000 #жизни компа
#
#коэффициент урона отвечает за сам урон , крит , промахи и блок(встретится ниже)
#Ввод имени
name=input("Как тебя звать то ? ")
exit=1
#игра с компом
while helth1>0 and helth2>0 and exit!=0:
    #выбор места удара игрока
    #урон от места удара не зависит
    ud1=int(input(name + ", куда вы хотите ударить ?\n"
        +"1.Голова\n"
        +"2.Живот\n"
        +"3.Ноги\n"))
    #выбор места блокировки игрока
    block1=int(input(name + ", Удар в какую часть тела вы хотите заблокировать ?\n"
        +"1.Голова\n"
        +"2.Живот\n"
        +"3.Ноги\n"))
   #выбор места удара компа
    #1- голова, 2 - живот, 3- ноги
    ud2=random.randint(1,3)
    block2=random.randint(1,3) #1- голова, 2 - живот, 3 -ноги
   #случай  , если удар идет без блока (удар игрока)
    if  ud1!=block2:
       damage_k=random.randint(-15,50) #коэффициент урона(про который написал сверху)
    #расчет урона
    #если коэффициент больше нуля , умножаем его на 5 и получаем урон
       if damage_k>0:
           damage=damage_k*5
           helth2-=damage
           print("Вы нанесли противнику ",damage," урона")
           #если коэффициент равен нулю , то дамаг равен нулю(промах)
       elif damage_k==0:
           damage=0
           print("Вы промахнулись. Противник не получил урона")
           #если коэффициент меньше нуля , то удар заблокируется (даже если противник не поставил блок
           
       if damage_k<0:
            damage=(damage_k*-1)*(1-damage_k/100)*5
            helth2-=damage
            print("Вы нанесли противнику ",damage," урона.Урон был снижен , т.к. вы плохо замахнулись")
            #cлучай , если удар нанесли в блок
    if  ud1==block2:
       damage_k=random.randint(-15,50) #коэффициент урона(про который написал сверху)
    #расчет урона
    #если коэффициент больше нуля , умножаем его на 5 и получаем урон
       if damage_k>0:
           damage=damage_k*5*0.4
           helth2-=damage
           print("Противник поставил блок и снизил урон от вашей атаки на 60%\n"
                 +"Вы нанесли противнику ",damage," урона")
           #если коэффициент равен нулю , то дамаг равен нулю(промах)
       elif damage_k==0:
           damage=0
           print("Вы промахнулись. Противник не получил урона")
           #если коэффициент меньше нуля , то удар заблокируется (даже если противник не поставил блок
           #если противник вдобавок поставил блок , урон значительно уменьшится
       if damage_k<0:
            damage=(damage_k*-1)*(1-damage_k/100)*5*0.4
            helth2-=damage
            print("Вы нанесли противнику ",damage," урона. Урон был снижен, т.к.  вы плохо замахнулись.К тому же противник поставил блок")


        
        #случай  , если удар идет без блока (удар компа)
    if  ud2!=block1:
       damage_k=random.randint(-15,50) #коэффициент урона(про который написал сверху)
    #расчет урона
    #если коэффициент больше нуля , умножаем его на 5 и получаем урон
       if damage_k>0:
           damage=damage_k*5
           helth1-=damage
           print("Вам нанесли ",damage," урона")
           #если коэффициент равен нулю , то дамаг равен нулю(промах)
       elif damage_k==0:
           damage=0
           print("Противник промахнулся. Вы не получили урона")
           #если коэффициент меньше нуля , то удар заблокируется (даже если противник не поставил блок
           
       if damage_k<0:
            damage=(damage_k*-1)*(1-damage_k/100)*5
            helth1-=damage
            print("Вам нанесли ",damage," урона.Урон был снижен , т.к. противник плохо замахнулся")
            #cлучай , если удар нанесли в блок
    if  ud2==block1:
       damage_k=random.randint(-15,50) #коэффициент урона(про который написал сверху)
    #расчет урона
    #если коэффициент больше нуля , умножаем его на 5 и получаем урон
       if damage_k>0:
           damage=damage_k*5*0.4
           helth2-=damage
           print("Противник ударил вам в блок. Вы снизили урон от его атаки на 60%\n"
                 +"Вы нанесли противнику ",damage," урона")
           #если коэффициент равен нулю , то дамаг равен нулю(промах)
       elif damage_k==0:
           damage=0
           print("Противник промахнулся. Вы не получили урона")
           #если коэффициент меньше нуля , то удар заблокируется (даже если противник не поставил блок
           #если противник вдобавок поставил блок , урон значительно уменьшится
       if damage_k<0:
            damage=(damage_k*-1)*(1-damage_k/100)*5*0.4
            helth2-=damage
            print("Противник нанёс вам ",damage," урона. Урон был снижен, т.к. он плохо замахнулся.К тому же вы поставили блок")
 

    if helth1>0 and helth2<1:
        print ("Вы выиграли!!! У вас осталось ",helth1," хп")
    elif helth2>0 and helth1<1:
        print ("Вы проиграли!!! У противника осталось ",helth2," хп")
    if helth1>0 and helth2>0:    
        exit=int(input("Играем дальше?\n"
               +"1.Да\n"
               +"0.Нет, я сдаюсь!!!\n"))  
   
print("Game Over")
   

input("Press Enter to continue")

