#кости
import random

q=int(input("С кем вы хотите играть ?\n"
            +"1. Компьютер\n2. Партнёр"))
if q==1:
    
    a=random.randint(1,6)
    b=random.randrange(6)+1
    total=a+b
    pc_stav= random.randint(2,12)
    x=int(input("Введите вашу ставку(Какое число от 2 до 12 выпадет?):"))
    print("Первая кость:",a,"Вторая кость:",b,"В сумме:",total)

    if x!=total:
         if pc_stav!=total:
            print("Выпало -",total,"а вы поставили ",x,". Ваша ставка неправильная. \n"
                  +"Компьютер поставил ",pc_stav,", и у него тоже неправильно. НИЧЬЯ")
         if pc_stav==total:
            print("Выпало -",total,"а вы поставили ",x,". Ваша ставка неправильная. \n"
                  +"Компьютер поставил ",pc_stav,", и у него правильно. Компьютер победил!!!")        
    else:
       if pc_stav!=total:
            print("Выпало -",total,"а вы поставили ",x,". Ваша ставка была верна. \n"
                  +"Компьютер поставил ",pc_stav,", и у него ставка неправильная. Вы победили")
        if pc_stav==total:
            print("Выпало -",total,"а вы поставили ",x,". Ваша ставка была правильная. \n"
                  +"Компьютер поставил ",pc_stav,", и у него тоже правильно. Ничья!!!")
if q=2:
    a=random.randint(1,6)
    b=random.randrange(6)+1
    total=a+b
    x=int(input("Первый игрок,введите вашу ставку(Какое число от 2 до 12 выпадет?):"))
    y=int(input("Второй игрок,введите вашу ставку(Какое число от 2 до 12 выпадет?):"))
    if x!=total:
         if y!=total:
            print("Выпало -",total,"а первый игрок поставил ",x,".Его ставка неверная. \n"
                  +"Второй игрок поставил ",y,", и у него тоже неправильно. НИЧЬЯ")
         if y==total:
            print("Выпало -",total,"а первый игрок поставил ",x,". Его ставка ставка неправильная. \n"
                  +"Второй игрок поставил ",y,", и его ставка правильная. Второй игрок победил!!!")        
    else:
       if y!=total:
            print("Выпало -",total,"а первый игрок поставил ",x,".Его ставка  правильная. \n"
                  +"Второй игрок поставил ",y,", и у него ставка неправильная. Первый игрок победил!!!")
         if y==total:
             print("Выпало -",total,"а первый игрок поставил ",x,".Его ставка ставка  правильная. \n"
                  +"Второй игрок поставил ",y,", и у него тоже правильно. Ничья!!!")
    
input("Press Enter to continue")
