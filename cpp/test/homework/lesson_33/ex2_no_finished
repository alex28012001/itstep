#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<cstring>
#include<stdlib.h>
int main()
{
	
	FILE *in, *out;//объявляем 2 потока
	
	if (!(in = fopen("U:\\Гусейнова_А_С\\код на занятиях\\28.txt", "r"))) //проверка на создание файла
	{
		printf("Error\n");
		return 1;
	}
	int counter= 0;
	char word[28];
	while (!feof(in))
	{
		fscanf(in,"%s",word);
		counter++;
	}
	printf("%d", counter);
	if (!(out = fopen("output.txt", "w")))
	{
		printf("Error\n");
		return 1;
	}

	fseek(in, 0, SEEK_SET);
	char **lenWord = (char**)malloc(sizeof(char*)*counter);
	for (int i = 0; i < counter; i++)
	{
		lenWord[i] = (char*)malloc(sizeof(char)*28);
	}
	int i = 0;
	while (!feof(in))
	{
		fscanf(in, "%s", word);
		strcpy(lenWord[i], word);
	}

	for (int i = 0; i < counter;i++)
	{

	}


	
	

	fclose(in);	
	fclose(out);
	
	

	return 0;
	
}
